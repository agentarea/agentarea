# Database settings - Main PostgreSQL instance
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=aiagents

# Database names (all on single PostgreSQL instance)
TEMPORAL_DB=temporal
INFISICAL_DB=infisical
KRATOS_DB=kratos
HYDRA_DB=hydra

# MinIO settings
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_REGION=us-east-1
DOCUMENTS_BUCKET=ai-agents-bucket 

## Secret Management Configuration
# Choose your secret storage backend: "database" (default) or "infisical"
# Note: Database type requires session and user_context (created per-request)
# SECRET_MANAGER_TYPE=database  # Default, no need to set explicitly

# Database Secret Manager (used when SECRET_MANAGER_TYPE=database)
# Encryption key for secrets stored in database
# Leave empty to auto-generate (WARNING: auto-generated key is not persistent across restarts)
# Generate a key with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
SECRET_MANAGER_ENCRYPTION_KEY=

## Infisical setup (used when SECRET_MANAGER_TYPE=infisical)

# Keys
# Required key for platform encryption/decryption ops
# THIS IS A SAMPLE ENCRYPTION KEY AND SHOULD NEVER BE USED FOR PRODUCTION
ENCRYPTION_KEY=6c1fe4e407b8911c104518103505b218

# JWT
# Required secrets to sign JWT tokens
# THIS IS A SAMPLE AUTH_SECRET KEY AND SHOULD NEVER BE USED FOR PRODUCTION
AUTH_SECRET=5lrMXKKWCVocS/uerPsl7V+TX/aaUaI7iDkgl3tSmLE=

# Required
DB_CONNECTION_URI=postgres://${POSTGRES_USER}:${POSTGRES_PASSWORD}@db:5432/${POSTGRES_DB}

# Redis
REDIS_URL=redis://redis:6379
INFISICAL_TOKEN_VOLUME=./.volumes/infisical-local-data

# Ory Kratos (Identity Management)
# SMTP settings for email delivery
SMTP_PROTOCOL=smtps
SMTP_HOST=mailslurper
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@agentarea.dev
SMTP_FROM_NAME=AgentArea
SMTP_SKIP_SSL_VERIFY=true

# Ory Hydra (OAuth2/OIDC)
# Note: Using environment variables to override DSN in config files

# Authentication Provider (for backend API)
AUTH_PROVIDER=kratos
# Kratos JWT settings (JWKS is embedded in Kratos config)
KRATOS_JWKS_
KRATOS_ISSUER=https://agentarea.dev
KRATOS_AUDIENCE=agentarea-api